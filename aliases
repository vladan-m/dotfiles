# Unix
alias l='ls'
alias ll='ls -al'
alias repo='cd ~/dev/repo'
alias grc='cd ~/dev/repo/ggrc-core'
alias showFiles='defaults write com.apple.finder AppleShowAllFiles YES; killAll Finder'
alias hideFiles='defaults write com.apple.finder AppleShowAllFiles NO; killAll Finder'

# Vagrant
alias vgup='vagrant up; vagrant ssh'
alias vgdown='vagrant halt --force'

# Combine GitHub aliases with aliases from ~/.gitconfig file.
alias add='git add -A'
alias pull='git pull'
alias push='git push'
alias st='git status'
alias who='git shortlog -n -s'

# MacVim
alias mvim='/Applications/MacVim.app/contents/MacOS/MacVim'
